<?xml version="1.0" encoding="utf-8"?>
<com.wefika.flowlayout.FlowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".fragment_page_decouverte">

    <TextView
        android:id="@+id/titre_pageDecouverte"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/title1"
        android:text="@string/titreDecouverte"
        android:gravity="center" />

    <TextView
        android:id="@+id/texte_pageDecouverte"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textAppearance="@style/textStyle"
        android:gravity="center"
        android:text="@string/txtPageDecouverte" />

    <ImageView
        android:id="@+id/pic_decouverte"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scaleType="fitStart"
        android:src="@drawable/merenature"
        android:adjustViewBounds="true" />

</com.wefika.flowlayout.FlowLayout>
